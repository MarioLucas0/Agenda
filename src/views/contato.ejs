<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead mb-4"><% if (contato._id) {%> Edite seu contato abaixo: <% } else { %> Crie seu contato abaixo: <% } %></p>

            <%- include('includes/messages') %> 
            
            <% if (contato._id) {%>
                <form action="/contato/edit/<%= contato._id%>" method="POST">
            <% } else { %>
                <form action="/contato/register" method="POST">
            <% } %> 
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="my-3">
                    <label class="form-label">Nome</label>
                    <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" required />
                </div>
                <div class="my-3">
                    <label class="form-label">Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" />
                </div>
                <div class="my-3">
                    <label class="form-label">E-mail</label>
                    <input value="<%= contato.email %>" type="email" class="form-control" name="email" />
                </div>
                <div class="my-3">
                    <label class="form-label">Telefone</label>
                    <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" />
                </div>
                <button type="submit" class="btn btn-primary"><% if (contato._id) {%> Editar <% } else { %> Criar <% } %></button>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>
